# Pick this up in $PS1 if you want
export VIRTUAL_ENV="<%= @env_path %>"

export PATH="$VIRTUAL_ENV/gem_home/bin:$PATH"

if [ -n "$GEM_HOME" ]; then
  unset GEM_HOME
fi

export GEM_HOME=$VIRTUAL_ENV/gem_home
export GEM_PATH=$(gem env home)

if [ -n "$BASH" -o -n "$ZSH_VERSION" ] ; then
    hash -r 2> /dev/null
fi
